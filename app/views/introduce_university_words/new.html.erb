<div class="univerEditBox col-md-10">
  <h3>よく使われる用語</h3>
  <%=form_for @introduceUniversityWords do |f| %>
    <div class="form-group row"><div class="col-md-1 col-form-label">用語:</div><div class="col-md-7"><%= f.text_field :title ,class:"form-control"%></div></div>
    <div class="form-group row"><div class="col-md-1 col-form-label">意味:</div><div class="col-md-7"><%= f.text_field :meaning ,class:"form-control"%></div></div>
    <div class="form-group row"><div class="col-md-1 col-form-label">例文:</div><div class="col-md-7"><%= f.text_area :example ,class:"form-control"%></div></div>
    <div class="col-md-7"><%= f.submit "送信" ,class:"btn"%></div>
  <% end %>
</div>
